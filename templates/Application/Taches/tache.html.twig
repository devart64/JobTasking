{% extends 'base.html.twig' %}

{% block title %}Tache{% endblock %}

{% block body %}
<h1>{{ Tache.piece.intitule }}</h1>

	
	
	
	<div class="row">
		<div class="col-md-6">
			<h3><i class="mdi {{ Tache.icon }}"></i>{{ Tache.intitule }}</h3>
			<hr>
			<p>{{ Tache.point }} pts</p>
		</div>
		<div class="col-md-6">
			{% if Tache.urlQrCode %}
				<img src="{{ Tache.urlQrCode }}" alt="qr-code">
			{% endif %}
		</div>
	</div>
	
{% endblock %}